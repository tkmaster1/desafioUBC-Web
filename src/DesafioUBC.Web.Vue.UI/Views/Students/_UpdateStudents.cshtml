<div class="modal fade" id="modalUpdateStudents" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header alert alert-dark">
                <h5 class="modal-title"><i class="fas fa-bars fa-fw me-1"></i>&nbsp;Editar Estudante</h5>
                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" v-on:click="clearFieldsChangeStudents"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Nome <span class="text-danger">*</span></label>
                        <div class="row row-space-10">
                            <div class="col-12" v-bind:class="classesErrorsValidationEditStudents">
                                <div class="input-group ">
                                    <input type="text" class="form-control" placeholder="Nome" v-model="editStudents.name" minLength="2" maxlength="256" required />
                                    <div class="invalid-feedback">
                                        {{messageErrorValidationEditStudents.name}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Idade <span class="text-danger">*</span></label>
                        <div class="row row-space-10">
                            <div class="col-12" v-bind:class="classesErrorsValidationEditStudents">
                                <div class="input-group input-daterange " id="dataInclusaoNoticiaDiv">
                                    <input type="number" class="form-control" placeholder="Idade" min="1" v-model="editStudents.age" required />
                                    <div class="invalid-feedback">
                                        {{messageErrorValidationEditStudents.age}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Série</label>
                        <div class="row row-space-10">
                            <div class="col-12" :class="classesErrorsValidationEditStudents">
                                <input type="number" class="form-control " placeholder="Série" v-model="editStudents.series" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nota média</label>
                        <div class="row row-space-10">
                            <div class="col-12" :class="classesErrorsValidationEditStudents">
                                <input type="number" class="form-control " placeholder="nota média" step="0.01" v-model="editStudents.averageGrade" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Endereço</label>
                        <div class="row row-space-10">
                            <div class="col-12" :class="classesErrorsValidationEditStudents">
                                <div class="input-group ">
                                    <input type="text" class="form-control" placeholder="Endereço" v-model="editStudents.address" maxlength="1000" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Data de nascimento <span class="text-danger">*</span></label>
                        <div class="row row-space-10">
                            <div class="col-12" :class="classesErrorsValidationEditStudents">
                                <div class="input-group input-daterange " id="dataNascimentoEditStudentsDiv">
                                    <input type="text" class="form-control data" name="start" placeholder="Data de nascimento"
                                           id="dataNascimentoEditStudentsRef" ref="dataNascimentoEditStudentsRef"
                                           v-maska data-maska="##/##/####" minLength="10"
                                           maxlength="10" v-model="editStudents.dateBirth" required />
                                    <label class="input-group-text" for="datepicker-component"><i class="fa fa-calendar"></i></label>
                                    <div class="invalid-feedback">
                                        {{messageErrorValidationEditStudents.dateBirth}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome do pai</label>
                        <div class="row row-space-10">
                            <div class="col-12" :class="classesErrorsValidationEditStudents">
                                <input type="text" class="form-control" placeholder="Nome do pai" v-model="editStudents.fatherName" minLength="2" maxlength="256" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome da mãe</label>
                        <div class="row row-space-10">
                            <div class="col-12" :class="classesErrorsValidationEditStudents">
                                <div class="input-group ">
                                    <input type="text" class="form-control" placeholder="Nome da mãe" v-model="editStudents.motherName" maxlength="256" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" data-toggle="modal" data-target="#modalUpdateStudents" v-on:click="clearFieldsChangeStudents">Fechar</button>
                <button type="submit" class="btn btn-success" v-on:click="saveChangeStudents">Salvar</button>
            </div>
        </div>
    </div>
</div>
<partial name="_MessagesUpdateStudents" />
